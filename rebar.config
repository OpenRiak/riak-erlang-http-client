{erl_opts, []}.

{deps,
 [
   {ibrowse, {git, "https://github.com/nhs-riak/ibrowse.git", {branch, "nhse-develop-3.0"}}},

   {webmachine, {git, "https://github.com/webmachine/webmachine.git", {tag, "1.11.1"}}},
   {mochiweb, {git, "https://github.com/nhs-riak/mochiweb.git", {branch, "nhse-develop-3.0"}}},
  
   {riakc, {git, "https://github.com/nhs-riak/riak-erlang-client", {tag, "nhse-develop-3.0"}}}
  ]}.
{edoc_opts,
 [
  %% handle macro expansion in edoc
  {preprocess, true},
  {include, "./deps/riakc/include/riakc.hrl"}
  ]}.
%% Misc =======================================================================
{clean_files, ["doc/*.html", "doc/*.png", "doc/edoc-info", "doc/*.css"]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used
]}.

